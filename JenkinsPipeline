pipeline {
    agent {
node {
label 'Dev'
}
}
    
    parameters {
                    string(name: 'PERSON', defaultValue: 'Mr Jenkins', description: 'Who should I say hello to?')
    }
    stages {
        stage('Hello') {
            steps {
                echo 'Hello World'
            }
        }
        stage('Build') {
            steps {
                sh 'java -version'
                echo 'Build Successfully'
            }
        }
        stage('Deploy') {
            steps {
                sh 'git --version'
                sh 'pwd'
        echo "Biography: ${parama's BIO}
        echo "Another method is to use \${BUILD_NUMBER} which is ${BUILD_NUMBER}"
                sh 'cd .'
                echo 'Build Successfully'
            }
        }
        stage('Test') {
            steps {
                dir('/home/ec2-user/workspace/Dev-pipeline/Abstract/') {
                    sh 'ls'  
                }
                echo 'Test Successfully'
            }
        }
    }
}
